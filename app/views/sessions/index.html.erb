<h1>Login</h1>
  <% if flash[:notice] %>
    <h1><div class="notice"><%= flash[:notice] %></div></h1>
  <% end %>
<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email %><br>
    <%= text_field_tag :email, params[:email] %>
  </p>

  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag "Log in" %>
  </p>
  <p>
    <%= link_to 'New User', students_path %>
  </p>
<% end %>