<h1>Add Student</h1>
 
<%= form_for @student do |f| %>
  <p>
    <%= f.label :Firstname %><br>
    <%= f.text_field :fname %>
  </p>

  <p>
    <%= f.label :Lastname %><br>
    <%= f.text_field :lname %>
  </p>

  <p>
    <%= f.label :NickName %><br>
    <%= f.text_field :nname %>
  </p>

  <p>
    <%= f.label :Email %><br>
    <%= f.text_field :email %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', students_path %>