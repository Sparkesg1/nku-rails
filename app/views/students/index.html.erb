<h1>Listing Students</h1>

<% if flash[:notice] %>
  <h1><div class="notice"><%= flash[:notice] %></div></h1>
<% end %>

<% @current = current_user %>
<% if @current == nil %>

<h4><%= link_to 'Sign up', new_student_path %></h4>
<h4><%= link_to 'Sign in', sessions_path %></h4>

<% else %>
  <h4><%= @current.email %></h4>
  <%= link_to "Sign out", session_path(session), method: :delete, data: { confirm: 'Are you sure you want to sign out?' } %>
  <br>
  <%= link_to 'Add Another Student', new_student_path %>
  <br>
  <%= link_to "I'm here!", new_attendance_path %>
  <br>
  <%= link_to 'Edit Profile', edit_student_path(@current.id) %>
<% end %>

