<h1>Listing Students</h1>
  <% if flash[:notice] %>
    <h1><div class="notice"><%= flash[:notice] %></div></h1>
  <% end %>
<% @current = current_user %>
<% if @current == nil %>
  <h4><%= link_to 'Sign up', new_student_path %></h4>
  <h4><%= link_to 'Sign in', sessions_path %></h4>
<% else %>
  <h4><%= @current.email %></h4>
  <%= link_to "Sign out", session_path(session), method: :delete, data: { confirm: 'Are you sure you want to sign out?' } %>
  <br>
  <%= link_to 'Add Another Student', new_student_path %>
<% end %>
<center>
<table>
  <tr>
    <td colspan=2>
      <h2>Students in Attendance Today(<%= Date.today %>)</h2>
    </td>
  </tr>
  <tr>
    <td><h3>Seat 1</h3></td>
    <td><h3>Seat 2</h3></td>  
  </tr>

  <tr>
    <td>
      <% Student.in_seat(1, Date.today).each do |student| %>
        <%= gravatar_image_tag( student.email ) %> 
      <br>
        <%= student.nick_name %>
      <% end %>
    </td>
    <td>
      <% Student.in_seat(2, Date.today).each do |student| %>
        <%= gravatar_image_tag( student.email ) %> 
      <br>
        <%= student.nick_name %>
      <% end %>
    </td>
  </tr>
  
  <tr>
    <td><h3>Seat 3</h3></td>
    <td><h3>Seat 4</h3></td>
  </tr>
  
  <tr>
    <td>
      <% Student.in_seat(3, Date.today).each do |student| %>
        <%= gravatar_image_tag( student.email ) %> 
      <br>
        <%= student.nick_name %>
      <% end %>
    </td>
    <td>
      <% Student.in_seat(4, Date.today).each do |student| %>
        <%= gravatar_image_tag( student.email ) %> 
      <br>
        <%= student.nick_name %>
      <% end %>
    </td>
  </tr>
</table>
  <h2>Students that are absent today( <%= Date.today %> )</h2>
<table>
  <tr>
    <th>Nickname</th>
    <th>Email</th>
  </tr>

<% Student.absent(Date.today).each do |student| %>
  <tr>
    <td><%= gravatar_image_tag( student.email ) %></td>
    <td><%= student.nick_name %></td>
    <td><%= student.email %></td>
    
  </tr>
 <% end %> 

</table>
</center>
<table>
  <tr>  
    
  </tr>

    <% @student.each do |student| %>
  <tr>
    <th colspan="3">
      <%= gravatar_image_tag( student.email ) %>
    </th>
  <tr>
    <th>First Name</th>
    <td><%= student.first_name %></td>
  </tr>
  <tr>
    <th>Last Name</th>
    <td><%= student.last_name %></td>
  </tr>
  <tr>
    <th>Nick Name</th>
    <td><%= student.nick_name %></td>
  </tr>
  <tr>
    <th>E-mail</th>
    <td><%= student.email %></td>
  </tr>

  <tr>
    <td>
      <% if current_user && current_user.id  == student.id %>
      <%= link_to 'Edit Profile', edit_student_path(student) %>
    </td>
    <td>
      <%= link_to 'Delete Profile', students_path(student), method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
    <% end %>
  </tr>
  <tr>

  </tr>
  <% end %>
</table>
