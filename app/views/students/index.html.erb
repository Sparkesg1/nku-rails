<h1>Listing Students</h1>
  <% if flash[:notice] %>
<h1><div class="notice"><%= flash[:notice] %></div></h1>
  <% end %>
<table>


<td><%= link_to 'Add Another Student', new_student_path %><td> 
  <% @student.each do |student| %>
  <tr>
    <th  colspan="3">
      <%= gravatar_image_tag( student.email ) %>
    </th> 
  <tr>
    <th>First Name</th>
    <td><%= student.fname %></td>
  </tr>
  <tr>
    <th>Last Name</th>
    <td><%= student.lname %></td>    
  </tr>
  <tr>
    <th>Nick Name</th>
    <td><%= student.nname %></td>    
  </tr>
  <tr>
    <th>E-mail</th>
    <td><%= student.email %></td>
  </tr>
  <tr>
    <td><%= link_to 'Edit Student', edit_student_path(student) %></td>
    <td><%= link_to 'Delete Student', student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <tr>

  </tr>
  <% end %>
</table>