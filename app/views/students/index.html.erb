    <td colspan=2>
      <h2>Students in Attendance Today(<%= @selected_date %>)</h2>
    </td>
  </tr>
  <tr>
    <td><h3>Seat 1</h3></td>
    <td><h3>Seat 2</h3></td>  
  </tr>
  <p>
