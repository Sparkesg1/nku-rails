<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<%= link_to 'Back to Students', students_path %>

<h1>Attendances</h1>

<table>
  <tr>
    <th>First Name:</th>
    <th>Last Name:</th>
    <th>Attended On:</th>
    <th>Seat:</th>
  </tr>
  
  <% @attendances.each do |attendance| %>
      <tr>
        <td><%= link_to( attendance.student.first_name, attendance_path( attendance.student ) ) %></td>
        <td><%= attendance.student.last_name %></td>
        <td><%= attendance.attended_on %></td>
        <td><%= attendance.seat %></td>
      </tr>
  <% end %>
</table>
